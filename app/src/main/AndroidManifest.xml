<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permiso para grabar audio -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- Permiso para acceder a Internet (opcional, pero recomendado) -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Indicar que la aplicaciÃ³n es compatible con Wear OS -->
    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BotonReconocerAudio"
        tools:targetApi="31">
        <activity
            android:name=".ResultadoActivity"
            android:exported="false"
            android:taskAffinity="" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:taskAffinity="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>